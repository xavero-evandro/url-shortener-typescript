{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "database": "url_shortener",
  "entities": [
    "src/models/*.ts"
  ],
  "migrations": [
    "./src/database/migrations/*.ts"
  ],
  "cli": {
    "entitiesDir": "./src/models",
    "migrationsDir": "./src/database/migrations"
  },
  "logging": true,
  "useNewUrlParser": true,
  "useUnifiedTopology": true
}
